function _fff {
    find . -name $1 2>/dev/null
}

function _ffi {
    find . -iname $1* 2>/dev/null
}

function _fffi {
    find . -iname $1 2>/dev/null
}

function vff {
    file=$(find . -name $1* 2>/dev/null | head -1)
    if [[ -z $file ]]; then
        echo vff: $1: not found
        return
    fi
    echo Opening $file...
    vim $file
}

function vfff {
    file=$(find . -name $1 2>/dev/null | head -1)
    if [[ -z $file ]]; then
        echo vfff: $1: not found
        return
    fi
    echo Opening $file...
    vim $file
}

