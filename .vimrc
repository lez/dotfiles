" searching
set hlsearch
set incsearch
set smartcase
set ignorecase

" coding with 4 spaces indent
set tabstop=4
set shiftwidth=4
set expandtab
set smarttab


" no files with a ~ ending
set nobackup

" but it's default
set ruler

set cursorline
set background=dark

set tags=./tags,../tags,../../tags,../../../tags,../../../../tags
syntax on
